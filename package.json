{
    "name": "webpack-react-typescript",
    "version": "1.0.0",
    "license": "ISC",
    "author": "tntyyy",
    "scripts": {
        "lint": "tsc --watch",
        "start": "webpack serve --mode development",
        "clean": "rm -rf dist",
        "bootstrap": "mkdir dist",
        "build": "yarn clean && yarn bootstrap && webpack --progress --mode production --profile --json > dist/stats.json",
        "test": "jest --watch",
        "test:coverage": "jest --coverage",
        "bundle-report": "yarn build && webpack-bundle-analyzer dist/stats.json",
        "stylelint": "stylelint \"**/*.scss\" --fix",
        "eslint": "npx eslint . --fix",
        "prettier": "prettier --write \"**/*.{ts,tsx,js}\""
    },
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@babel/preset-env": "^7.14.9",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@trivago/prettier-plugin-sort-imports": "^3.4.0",
        "@types/jest": "^26.0.24",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^18.0.5",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^6.2.0",
        "eslint": "^8.26.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-react": "^7.31.10",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^6.3.1",
        "html-webpack-plugin": "^5.3.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "prettier": "^2.7.1",
        "react-refresh": "^0.10.0",
        "sass": "^1.37.1",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "stylelint": "^14.14.0",
        "stylelint-config-standard-scss": "^5.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-order-config-standard": "^0.1.3",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5",
        "webpack": "^5.48.0",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.8.6",
        "@types/react-redux": "^7.1.24",
        "classnames": "^2.3.2",
        "dotenv-webpack": "^8.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.40.0",
        "react-redux": "^8.0.4",
        "react-router-dom": "^6.4.2",
        "swiper": "^8.4.5"
    }
}
